<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_transp">

    <RelativeLayout
        android:layout_width="@dimen/dp_two_hundred_fourty"
        android:layout_height="@dimen/main_proitem_height"
        android:layout_gravity="center"
        android:background="@drawable/white_bg">
        <TextView
            android:id="@+id/my_dialog_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/margin_s"
            android:layout_marginRight="@dimen/margin_s"
            android:layout_marginTop="@dimen/margin_m"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/my_dialog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_dialog_tips"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/margin_s"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="32dp"
            android:background="@color/txt_gray"/>
        <TextView
            android:id="@+id/my_dialog_confirm"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="чбошод"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>

</FrameLayout>

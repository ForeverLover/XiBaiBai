<?xml version="1.0" encoding="utf-8"?><!-- 测试页 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_frame"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_l"
    android:paddingRight="@dimen/margin_l">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_m"
        android:paddingTop="@dimen/margin_m">
        <TextView
            android:id="@+id/item_message_txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="left"
            android:layout_toLeftOf="@+id/item_message_txt_time"
            android:text="哈哈哈"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/txtsize_xl" />
        <TextView
            android:id="@+id/item_message_txt_time"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:text="2015.09.24 22:00"
            android:layout_alignParentRight="true"
            android:textColor="@color/txt_gray"
            android:textSize="@dimen/txtsize_m" />
    </RelativeLayout>
    <View
        android:id="@+id/orderdetailfinish_v_line5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/shape_line_dotted" />
    <TextView
        android:id="@+id/item_message_txt_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/margin_m"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/margin_m"
        android:text="建议建议建议建议建议建议建议建议建议建议建议建议建议建议建议建议建议"
        android:textColor="@color/txt_darkgray"
        android:textSize="@dimen/txtsize_m" />
</LinearLayout>
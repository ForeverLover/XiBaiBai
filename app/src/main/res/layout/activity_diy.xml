<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/diy_rgroup_status"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:checkedButton="@+id/diy_rbtn_scratch"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/diy_rbtn_scratch"
            android:layout_width="0dp"
            android:paddingLeft="@dimen/margin_m"
            android:paddingRight="@dimen/margin_m"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_transparent_gray"
            android:button="@null"
            android:drawableRight="@drawable/selector_diy_rbtn_check"
            android:gravity="center"
            android:text="划痕处理"
            android:textColor="@color/selector_diy_txt_tab"
            android:textSize="@dimen/txtsize_l" />

        <View
            android:layout_width="@dimen/size_divider"
            android:layout_height="match_parent"
            android:background="@color/divider" />

        <RadioButton
            android:id="@+id/diy_rbtn_window"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_transparent_gray"
            android:button="@null"
            android:drawableRight="@drawable/selector_diy_rbtn_check"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_m"
            android:paddingRight="@dimen/margin_m"
            android:text="车窗套餐"
            android:textColor="@color/selector_diy_txt_tab"
            android:textSize="@dimen/txtsize_l" />

        <View
            android:layout_width="@dimen/size_divider"
            android:layout_height="match_parent"
            android:background="@color/divider" />

        <RadioButton
            android:id="@+id/diy_rbtn_conserve"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_transparent_gray"
            android:button="@null"
            android:drawableRight="@drawable/selector_diy_rbtn_check"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_m"
            android:paddingRight="@dimen/margin_m"
            android:text="养护套餐"
            android:textColor="@color/selector_diy_txt_tab"
            android:textSize="@dimen/txtsize_l" />

    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/diy_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
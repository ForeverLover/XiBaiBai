<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/bg_gray"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:text="用户信息"
                android:textSize="16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:paddingLeft="20dp"
                    android:text="车主"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/dorder_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:paddingRight="10dp"
                    android:text=""
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="@color/bg_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:paddingLeft="20dp"
                    android:text="电话"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/dorder_phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:paddingRight="10dp"
                    android:text=""
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_gray"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/bg_gray"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:text="车辆信息"
                android:textSize="16sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:paddingLeft="20dp"
                    android:text="车牌号"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/dorder_carnum_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:paddingRight="10dp"
                    android:text=""
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="@color/bg_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:paddingLeft="20dp"
                    android:text="车型"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/dorder_cartype_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:paddingRight="10dp"
                    android:text=""
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="@color/bg_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:paddingLeft="20dp"
                    android:text="位置"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/dorder_carlocate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:paddingRight="10dp"
                    android:text=""
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/bg_gray"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:text="服务内容"
                android:textSize="16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_gray"/>
            <ListView
                android:id="@+id/detail_product_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:scrollbars="none"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_gray"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/red"
                        android:text="总价："/>
                    <TextView
                        android:id="@+id/detail_totalprice_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/red"
                        android:text=""/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="优惠券："/>
                <TextView
                    android:id="@+id/detail_coupons_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:text=""/>
            </LinearLayout>

            <RadioGroup
                android:id="@+id/dorder_rgroup_payway"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:checkedButton="@+id/payorder_rbtn_alipay"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/dorder_rbtn_alipay"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/selector_bg_transparent_gray"
                    android:button="@null"
                    android:drawableLeft="@drawable/icon_alipay"
                    android:drawablePadding="@dimen/margin_s"
                    android:drawableRight="@drawable/selector_diy_rbtn_check"
                    android:paddingLeft="@dimen/margin_l"
                    android:paddingRight="@dimen/margin_l"
                    android:text="支付宝"
                    android:textColor="@color/txt_black"
                    android:textSize="@dimen/txtsize_l"
                    android:textStyle="bold" />
            </RadioGroup>

            <Button
                android:id="@+id/dorder_btn_pay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="@dimen/margin_l"
                android:background="@drawable/shape_bg_btn_orange"
                android:text="确认支付"
                android:textColor="@color/white"
                android:textSize="@dimen/txtsize_l" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
